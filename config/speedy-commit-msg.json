{
	"rules": {
		"message": {
			"max-length": 75
		},
		"type": {
			"valid-types": [
				"amend",
				"feat",
				"fix",
				"docs",
				"style",
				"refactor",
				"perf",
				"test",
				"chore",
				"revert"
			]
		},
		"scope": {
			"no-dash": true,
			"no-underscore": true
		},
		"subject": {
			"no-period-at-end": true,
			"no-upper-first": true
		}
	}
}