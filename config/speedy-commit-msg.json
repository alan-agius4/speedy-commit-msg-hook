{
	"rules": {
		"message": {
			"skip-validation": "^(Merge|Revert)\\s",
			"max-length": 75,
			"banned-phrases": [
				"minor change",
				"minor fix",
				"minor refactor",
				"pr change",
				"pr comment",
				"following pr"
			],
			"no-period-at-end": true,
			"no-upper-first": true
		},
		"type": {
			"valid-types": [
				"amend",
				"feat",
				"fix",
				"docs",
				"style",
				"refactor",
				"perf",
				"test",
				"chore",
				"revert"
			]
		},
		"scope": {
			"no-dash": true,
			"no-underscore": true
		},
		"subject": {
			"no-period-at-end": true,
			"no-upper-first": true
		}
	}
}